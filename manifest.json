{
  "manifest_version": 2,
  "name": "Color Changer",
  "version": "1.0",
  "description": "Change text color of specific elements",
  "browser_action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ]
}
